<header class="mb-auto">
    <div class="d-flex justify-content-between align-items-center">
      <h3 class="float-md-start mb-0">
        <a class="btn fw-bold fs-2 text-white " href="/">BY-System</a>
      </h3>
      <% if (user) { %>
        <div class="d-flex align-items-center">
          <p class="mb-0 me-2">welcome: <%= user.username %></p>
          <a class="fw-bold btn btn-light" href="/signout">Sign out</a>
        </div>
       <% } else { %>
        <nav class="nav nav-masthead justify-content-center float-md-end">
          <a class="fw-bold btn <%= currentPage == "login" ? "btn-light" : null %>" href="/login">Log in</a>
          <a class="fw-bold btn <%= currentPage == "signup" ? "btn-light" : null %>" href="/signup">Sign up</a>
        </nav>
      <% } %>
    </div>
  </header>